{
    "name": "pool-estimator",
    "version": "1.0.7",
    "description": "Professional Pool Cost Estimator",
    "author": "Sokratttttt",
    "repository": {
        "type": "git",
        "url": "https://github.com/sokratttttt/pool-estimator.git"
    },
    "private": true,
    "main": "electron/main.js",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
        "electron:build": "next build && electron-builder",
        "electron:build:win": "next build && electron-builder --win",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "dependencies": {
        "@supabase/supabase-js": "^2.45.4",
        "docx": "^9.5.1",
        "dotenv": "^17.2.3",
        "electron-log": "^5.4.3",
        "electron-updater": "^6.6.2",
        "exceljs": "^4.4.0",
        "file-saver": "^2.0.5",
        "framer-motion": "^11.0.0",
        "gantt-task-react": "^0.3.9",
        "html2canvas": "^1.4.1",
        "jspdf": "^3.0.4",
        "jspdf-autotable": "^3.8.2",
        "lucide-react": "^0.344.0",
        "next": "^14.2.33",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-window": "^2.2.3",
        "recharts": "^3.5.0",
        "sharp": "^0.34.5",
        "sonner": "^1.4.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "electron": "^33.2.1",
        "electron-builder": "^25.1.8",
        "electron-is-dev": "^3.0.1",
        "eslint": "^8.57.1",
        "eslint-config-next": "^14.2.3",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "postcss": "^8.4.47",
        "tailwindcss": "^3.4.13",
        "typescript": "^5.9.3",
        "wait-on": "^8.0.1"
    },
    "build": {
        "appId": "com.mospool.calculator",
        "productName": "MOS-POOL Калькулятор",
        "directories": {
            "output": "dist"
        },
        "files": [
            "out/**/*",
            "electron/**/*",
            "public/**/*",
            "package.json"
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "public/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "MOS-POOL Калькулятор"
        },
        "publish": {
            "provider": "github",
            "owner": "sokratttttt",
            "repo": "pool-estimator"
        }
    }
}